@model ArtemisBanking.Core.Application.ViewModels.AdminHome.DashboardAdminViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid py-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-0">Dashboard de administrador</h2>
            <p class="text-muted">System Overview</p>
        </div>
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @ViewBag.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Cards Section -->
    <div class="row g-4">

        <!-- Total Transactions -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Total de transacciones</h6>
                        <h3 class="mb-0">@Model.TotalTransactions</h3>
                    </div>
                    <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-list-check text-primary fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Transactions Today -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Transacciones de hoy</h6>
                        <h3 class="mb-0">@Model.TodayTransactions</h3>
                    </div>
                    <div class="bg-success bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-calendar-check text-success fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Payments -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Total de pagos del sistema</h6>
                        <h3 class="mb-0">@Model.TotalPayments</h3>
                        <small class="text-muted">Pagos de hoy: @Model.TodayPayments</small>
                    </div>
                    <div class="bg-danger bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-cash-stack text-danger fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Products -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Total de productos financieros</h6>
                        <h3 class="mb-0">@Model.TotalProducts</h3>
                        <small class="text-muted">Cuentas, prestamos, tarjetas</small>
                    </div>
                    <div class="bg-info bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-grid-3x3-gap text-info fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Clients -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Clientes activos</h6>
                        <h3 class="mb-0">@Model.ActiveClients</h3>
                    </div>
                    <div class="bg-success bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-people-fill text-success fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Inactive Clients -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Clientes inactivos </h6>
                        <h3 class="mb-0">@Model.InactiveClients</h3>
                    </div>
                    <div class="bg-secondary bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-person-x-fill text-secondary fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Loans -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Prestamos activos</h6>
                        <h3 class="mb-0">@Model.ActiveLoans</h3>
                    </div>
                    <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-journal-text text-warning fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Credit Cards -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Tarjetas de crédito activas</h6>
                        <h3 class="mb-0">@Model.ActiveCreditCards</h3>
                    </div>
                    <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-credit-card text-primary fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Savings Accounts -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Cuentas de ahorro activas</h6>
                        <h3 class="mb-0">@Model.ActiveSavingsAccounts</h3>
                    </div>
                    <div class="bg-success bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-piggy-bank text-success fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Average Client Debt -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Deuda media de los clientes</h6>
                        <h3 class="mb-0">$@Model.AverageClientDebt.ToString("N2")</h3>
                        <small class="text-muted">Prestamos + tarjetas</small>
                    </div>
                    <div class="bg-danger bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-graph-down-arrow text-danger fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
