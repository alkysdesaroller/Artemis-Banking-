@model CreateLoanViewModel 
@{
    ViewData["Title"] = "asignar prestamo";
    Layout = "_LayoutAdmin";
}

<div class="row">
    <div class="d-flex justify-content-center">
        <div class="col-md-5">
            @* Mensaje de informaci√≥n *@
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    @if (ViewBag.Message is string)
                    {
                        <p class="text-center">@Html.Raw(ViewBag.Message.Replace("\n", "<br />"))</p>
                    }
                    else
                    {
                        @foreach (var line in ViewBag.Message)
                        {
                            <p class="text-center">@line</p>
                        }
                    }
                    <br />
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card shadow">
                <div class="card-header bg-primary text-light text-center">
                    <h3 class="card-title">Rellena este formulario</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Loans" asp-action="CreateLoan" method="post">
                        <input type="hidden" asp-for="ClientId"/>
                        <div class="mt-2">
                            <label class="form-label" asp-for="TermMonth">Plazo:</label>
                            <select
                                class="form-select"
                                asp-for="TermMonth"
                                asp-items="@(new SelectList(new int[] { 6, 12, 18, 24, 30, 36, 42, 48, 54, 60 }))">
                            </select>
                            <span class="text-danger" asp-validation-for="TermMonth"></span>
                        </div>

                        <div class="mt-2">
                            <label class="form-label" asp-for="AnualRate">Tasa anual:</label>
                            <input class="form-control" asp-for="AnualRate" step="0.01"/>
                            <span class="text-danger" asp-validation-for="AnualRate"></span>
                        </div>

                        <div class="d-flex justify-content-center mt-4">
                            <button class="btn btn-success w-75" type="submit">Asignar prestamo</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>