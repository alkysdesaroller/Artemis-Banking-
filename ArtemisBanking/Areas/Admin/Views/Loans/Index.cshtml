@model LoanIndexViewModel

@{
    ViewBag.Title = "Mantenimiento de clientes";
    Layout = "_LayoutAdmin";
}

@{
    if (ViewBag.Message != null)
    {
        @if (ViewBag.Message is string)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <p class="text-center">@Html.Raw(ViewBag.Message.Replace("\n", "<br />"))</p>
                <br/>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                @foreach (var line in ViewBag.Message)
                {
                    <p class="text-center">@line</p>
                }
                <br/>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    }
}

<div class="row mb-2">
    <div class="justify-content-end">
        <a class="btn btn-success" asp-controller="Loans" asp-action="SelectUser">Asignar un préstamo</a>
    </div>
</div>

<div class="row">
    
    <div class="card mb-3 w-50">
        <div class="card-header fw-bold">
            Filtros
        </div>
        <div class="card-body">
            <form asp-controller="Loans" asp-action="Index" method="get">
                <div class="d-flex">
                        
                    <div class="input-group me-1">
                        <span class="input-group-text">Cédula</span>
                        <input class="form-control" type="text" name="identityCardNumber" placeholder="numero de cedula"/>
                    </div>
                    
                    <div class="input-group me-1">
                        <span class="input-group-text">Estado:</span>
                        <select class="form-select" name="isCompleted">
                            <option value="">Seleccione un estado</option>
                            <option value="true">Completado</option>
                            <option value="false">No completado</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-outline-primary">
                        Filtrar
                    </button>

                </div>
            </form>
        </div>
    </div>
    
</div>

<div class="row">
    <div class="card">
        <div class="card-body">
            <div>
                @if (Model.Data.Items.Count() == 0)
                {
                    <div class="card-text text-muted text-center">No existe informacion de prestamos</div>
                }
                else
                {

                    <table class="table table-striped w-100">
                        <thead>
                        <tr>
                            <th>Préstamo #</th>
                            <th>Nombre y apellido</th>
                            <th>Capital</th>
                            <th>Monto pendiente</th>
                            <th>Cant. de cuotas</th>
                            <th>Cant. de cuotas pagadas</th>
                            <th>Tasa de interes</th>
                            <th>Plazo (Meses)</th>
                            <th>Estado</th>
                            <th>¿Esta en mora?</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var loan in Model.Data.Items)
                        {
                            <tr>
                                <td>@loan.Id</td>
                                <td>@($"{loan.Client?.FirstName} {loan.Client?.LastName}")</td>
                                <td>@loan.Amount</td>
                                <td>@loan.RemainingBalanceToPay</td>
                                <td>@loan.InstallmentsCount</td>
                                <td>@loan.InstallmentsPaidCount</td>
                                <td>@loan.AnualRate</td>
                                <td>@loan.TermMonths</td>
                                <td>@(loan.Completed ? "Completado" : "No completado")</td>
                                <td>@(loan.IsDue ? "Si" : "No")</td>
                                <td>
                                    <div class="me-2">
                                        <a class="btn btn-outline-primary" asp-controller="Loans" asp-action="Details" asp-route-loanId="@loan.Id">
                                            Detalles
                                        </a>
                                    </div>
                                    <div>
                                        <a class="btn btn-outline-warning" asp-controller="Loans" asp-action="Edit" asp-route-loanId="@loan.Id">
                                            Editar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
    
    <div class="d-flex justify-content-center mt-2">
        @{
            int previosPageIndex = Model.Data.Pagination.CurrentPage - 1;
            int nextPageIndex = Model.Data.Pagination.CurrentPage + 1;
        }
        <ul class="pagination">
            @if (Model.Data.Pagination.CurrentPage > 1)
            {
                <li class="page-item"><a class="page-link" asp-controller="Loans" asp-action="Index" asp-route-page="@previosPageIndex">Anterior</a></li>
                <li class="page-item"><a class="page-link" asp-controller="Loans" asp-action="Index" asp-route-page="@previosPageIndex">@previosPageIndex</a></li>
            }
            else
            {
                // Desactivados
                <li class="page-item"><a class="page-link disabled">Anterior</a></li>
                <li class="page-item"><a class="page-link disabled">@previosPageIndex</a></li>
            }
           
            <li class="page-item active"><a class="page-link" asp-controller="Loans" asp-action="Index" asp-route-page="@Model.Data.Pagination.CurrentPage">@Model.Data.Pagination.CurrentPage</a></li>
            
            @if (Model.Data.Pagination.CurrentPage < Model.Data.Pagination.TotalPages)
            {
                
                <li class="page-item"><a class="page-link" asp-controller="Loans" asp-action="Index" asp-route-page="@nextPageIndex">@nextPageIndex</a></li>
                <li class="page-item"><a class="page-link" asp-controller="Loans" asp-action="Index" asp-route-page="@(Model.Data.Pagination.CurrentPage + 1)">Siguiente</a></li>
            }
            else
            {
                //Desactivados
                <li class="page-item disabled"><a class="page-link">@nextPageIndex</a></li>
                <li class="page-item disabled"><a class="page-link">Siguiente</a></li>
            }
        </ul>
    </div>
    
</div>