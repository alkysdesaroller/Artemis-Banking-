@{
    ViewBag.Title = "Selecciona un usuario";
    Layout = "_LayoutAdmin";
}

<div class="mb-4">
    @await Component.InvokeAsync("AverageDebtPerUser")
</div>

<form asp-controller="Loans" asp-action="SelectUser" method="post">
    <div class="mb-4">
        @await Component.InvokeAsync("ClientList")
    </div>
    <div class="d-flex justify-content-center mt-2">
        <div class="me-1">
            <button class="btn btn-success">Siguiente paso</button>
        </div>
        <div class="me-1">
            <a asp-controller="Loans" asp-action="Index" class="btn btn-warning">Volver</a>
        </div>
    </div>
</form>
