@model ConfirmWithdrawalViewModel
@{
    ViewData["Title"] = "Confirmar Retiro";
    Layout = "_LayoutTeller";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12 col-md-8 col-lg-6 mx-auto">
            <div class="card shadow-sm border-warning">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-cash"></i> Confirmación de Retiro
                    </h4>
                </div>

                <div class="card-body">

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle-fill"></i>
                        Verifica los datos antes de procesar el retiro.
                    </div>

                    <div class="mb-4">
                        <h5 class="mb-3">Datos del Cliente</h5>
                        <p class="fw-bold">@Model.ClientName</p>

                        <h5 class="mb-3">Detalles del Retiro</h5>
                        <table class="table table-bordered">
                            <tr>
                                <th>Cuenta:</th>
                                <td>@Model.Withdrawal.AccountNumber</td>
                            </tr>

                            <tr>
                                <th>Monto a Retirar:</th>
                                <td class="fw-bold text-danger">
                                    $@Model.Withdrawal.Amount.ToString("N2")
                                </td>
                            </tr>
                        </table>
                    </div>

                    <form asp-area="Teller"
                          asp-controller="Withdrawal"
                          asp-action="ProcessWithdrawal"
                          method="post">
                        
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="Withdrawal.AccountNumber" />
                        <input type="hidden" asp-for="Withdrawal.Amount" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-area="Teller"
                               asp-controller="Withdrawal"
                               asp-action="Index"
                               class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>

                            <button type="submit"
                                    class="btn btn-warning">
                                <i class="bi bi-check-circle"></i> Confirmar Retiro
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
