@model ThirdPartyTransactionViewModel
@{
    ViewData["Title"] = "Transferencia a Terceros";
    Layout = "_LayoutTeller";
}
 
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12 col-md-8 col-lg-6 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-arrow-left-right"></i> Transferencia a Terceros</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @ViewBag.Message
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Index" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="SourceAccountNumber" class="form-label"></label>
                            <input asp-for="SourceAccountNumber" class="form-control" placeholder="Ingrese el número de cuenta origen" />
                            <span asp-validation-for="SourceAccountNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DestinationAccountNumber" class="form-label"></label>
                            <input asp-for="DestinationAccountNumber" class="form-control" placeholder="Ingrese el número de cuenta destino" />
                            <span asp-validation-for="DestinationAccountNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0.01" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Descripción opcional"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-area="Teller" asp-controller="Home" asp-action="Dashboard" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Procesar Transferencia
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
