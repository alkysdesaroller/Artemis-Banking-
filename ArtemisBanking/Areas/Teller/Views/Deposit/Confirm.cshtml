@using ArtemisBanking.Core.Domain.Common.Enums
@model TransactionConfirmationViewModel
@{
    ViewData["Title"] = "Confirmación de Depósito";
    Layout = "_LayoutTeller";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12 col-md-8 col-lg-6 mx-auto">
            <div class="card shadow-sm border-success">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-check-circle"></i> Depósito Procesado Exitosamente</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle-fill"></i> La transacción se ha completado correctamente.
                    </div>

                    <div class="mb-4">
                        <h5 class="mb-3">Detalles de la Transacción</h5>
                        <table class="table table-bordered">
                            <tr>
                                <th>Número de Transacción:</th>
                                <td>@Model.Transaction.Id</td>
                            </tr>
                            <tr>
                                <th>Tipo:</th>
                                <td>@Model.TransactionType</td>
                            </tr>
                            <tr>
                                <th>Cuenta:</th>
                                <td>@Model.AccountNumber</td>
                            </tr>
                            <tr>
                                <th>Monto:</th>
                                <td class="fw-bold text-success">$@Model.Transaction.Amount.ToString("N2")</td>
                            </tr>
                            <tr>
                                <th>Fecha:</th>
                                <td>@Model.Transaction.Date.ToString("dd/MM/yyyy HH:mm:ss")</td>
                            </tr>
                            <tr>
                                <th>Estado:</th>
                                <td>
                                    @if (Model.Transaction.Status == TransactionStatus.Approved)
                                    {
                                        <span class="badge bg-success">Completada</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">@Model.Transaction.Status</span>
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-area="Teller" asp-controller="Deposit" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Nuevo Depósito
                        </a>
                        <a asp-area="Teller" asp-controller="Home" asp-action="Dashboard" class="btn btn-secondary">
                            <i class="bi bi-house"></i> Volver al Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
