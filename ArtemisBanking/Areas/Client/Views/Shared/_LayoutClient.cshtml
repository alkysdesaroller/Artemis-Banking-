@using System.Security.Claims
@using ArtemisBanking.Core.Application.Interfaces
@using ArtemisBanking.Infrastructure.Identity.Entities
@using Microsoft.AspNetCore.Identity
@inject UserManager<AppUser> UserManager;
@{
    Layout = null;
    var user = await UserManager.GetUserAsync(User);
} 
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Panel Administrativo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
    <!-- ======= NAVBAR SUPERIOR ======= -->
    <nav class="top-header">
        <div class="logo-section">
            <i class="bi bi-bank"></i>
            <span class="logo-text">Artemis Banking</span>
        </div>

        <div class="user-section">
            <span class="user-name">Hola, <strong>@($"{user?.FirstName} {user?.LastName}")</strong></span>
            <a asp-area="" asp-controller="Login" asp-action="LogOut" class="btn btn-light btn-sm">
                <i class="bi bi-box-arrow-right"></i> Cerrar sesión
            </a>
        </div>
    </nav>

    <!-- ======= SIDEBAR ======= -->
    <div class="sidebar">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index"
           class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
            <i class="bi bi-house"></i>
            <span class="text-center">Inicio</span>
        </a>

        <a asp-area="Admin" asp-controller="Users" asp-action="Index"
           class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")">
            <i class="bi bi-people"></i>
            <span class="text-center">Usuarios</span>
        </a>

        <a asp-area="Admin" asp-controller="Loans" asp-action="Index"
           class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Loans" ? "active" : "")">
            <i class="bi bi-box-seam"></i>
            <span class="text-center">Préstamos</span>
        </a>

        <a asp-area="Admin" asp-controller="CreditCards" asp-action="Index"
           class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "CreditCards" ? "active" : "")">
            <i class="bi bi-credit-card"></i>
            <span class="text-center">Tarjetas de crédito</span>
        </a>

        <a asp-area="Admin" asp-controller="SavingAccounts" asp-action="Index"
           class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "SavingAccounts" ? "active" : "")">
            <i class="bi bi-piggy-bank"></i>
            <span class="text-center">Cuentas de ahorro</span>
        </a>

    </div>

    <!-- ======= CONTENIDO PRINCIPAL ======= -->
    <main class="main-content">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
